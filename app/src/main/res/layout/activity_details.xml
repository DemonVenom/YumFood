<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_detail_title"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:contentDescription="@+id/text_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_detail_recipe"
                        android:scaleType="fitXY"
                        android:src="@drawable/popcorn_chicken"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="@+id/text_detail_title"
                        app:shapeAppearanceOverlay="@style/roundedShape" >

                    </com.google.android.material.imageview.ShapeableImageView>
                    <TextView
                        android:id="@+id/text_detail_author"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/secondaryColor"
                        android:textSize="16sp"
                        android:contentDescription="@+id/text_detail_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/text_detail_diets"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:contentDescription="@+id/text_detail_diets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_detail_detail_header"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:contentDescription="Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Details">

                    </TextView>
                    <TextView
                        android:id="@+id/text_detail_detail"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@+id/text_detail_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <Button
                        android:id="@+id/button_speak_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:enabled="false"
                        android:contentDescription="Text to Speech Details"
                        android:text="Text to Speech Details" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_detail_ingredients_header"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:contentDescription="Ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingredients">

                    </TextView>
                    <TextView
                        android:id="@+id/text_detail_ingredients"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@+id/text_detail_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <Button
                        android:id="@+id/button_speak_ingredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:enabled="false"
                        android:contentDescription="Text to Speech Ingredients"
                        android:text="Text to Speech Ingredients" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_detail_content_header"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:contentDescription="Instructions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Instructions">

                        </TextView>
                        <TextView
                            android:id="@+id/text_detail_instruction"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@+id/text_detail_instruction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <Button
                            android:id="@+id/button_speak_instructions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:enabled="false"
                            android:contentDescription="Text to Speech Instructions"
                            android:text="Text to Speech Instructions" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>